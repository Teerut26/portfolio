---
import Icon from '../components/Icon.astro'
import DefaultLayout from './DefaultLayout.astro'

interface FrontMatterProps {
  title: string
  preview?: string
  stacks?: StacksInterface[]
}

export interface StacksInterface {
  name: string
  icon: string
}

const { frontmatter } = Astro.props as { frontmatter: FrontMatterProps }
const { stacks, title, preview } = frontmatter
---

<DefaultLayout title={title}>
  <div class="container">
    <div class="space-content my-12">
      {
        preview && (
          <div>
            Preview :{' '}
            <a target="_blank" href={preview}>
              {preview}
            </a>
          </div>
        )
      }
      {
        stacks && (
          <>
            <div class="flex flex-wrap items-center gap-2 md:gap-4">
              {stacks?.map((stack) => (
                <Icon data={stack} />
              ))}
            </div>
            <div class="h-[1px] w-full bg-black/10 dark:bg-white/10 md:h-[2px]" />
          </>
        )
      }

      <slot />
    </div>
  </div>
</DefaultLayout>
